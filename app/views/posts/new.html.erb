<%= form_for @post do |f| %>
    <%= f.label "Title" %>
    <%= f.text_field :title %><br>
    <%= f.label "Content"%>
    <%= f.text_area :content %><br>

    <%= f.label "Select a Category"%>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
    <%= f.label "Create your own category" %>
    <%= f.fields_for :categories, @post.categories.build do |category_fields|%>
        <%= category_fields.text_field :name%>
    <% end %>

    <%= f.submit "Create Post"%>
<% end %>